  },
  "dependencies": {
    "libshv-js": "^5.0.0",
    "zod": "^4.0.11"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-xo": "^0.49.0",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
